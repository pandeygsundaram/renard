{
  "manifest_version": 2,
  "name": "Renard",
  "version": "1.0",
  "description": "Reads chat messages from ChatGPT, Gemini, Claude, Grok.",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "https://chatgpt.com/*",
    "https://www.chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://gemini.google.com/*",
    "https://claude.ai/*",
    "https://grok.com/*",
    "https://x.ai/*"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://www.chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["content/content-script.js"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["content/content-script.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content/content-script.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://grok.com/*",
        "https://www.grok.com/*",
        "https://x.ai/*"
      ],
      "js": ["content/content-script.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": ["inject.js"],

  "externally_connectable": {
    "matches": ["http://localhost:5173/*"]
  }
}
