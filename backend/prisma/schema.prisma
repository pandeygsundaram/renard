generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model User {
  id                   String       @id @default(uuid())
  email                String       @unique
  password             String
  name                 String
  role                 Role         @default(EMPLOYEE)
  createdAt            DateTime     @default(now())
  updatedAt            DateTime     @updatedAt
  accountType          AccountType  @default(INDIVIDUAL)
  apiKey               String?      @unique
  createdBy            String?
  isActive             Boolean      @default(true)
  authProvider         String       @default("EMAIL")
  isVerified           Boolean
  hasSetPassword       Boolean      @default(true)
  otp                  String?
  otpExpiry            DateTime?
  resetPasswordToken   String?
  resetPasswordExpires DateTime?
  activities           Activity[]
  teamMemberships      TeamMember[]
  User                 User?        @relation("UserToUser", fields: [createdBy], references: [id])
  other_User           User[]       @relation("UserToUser")
  workLogs             WorkLog[]
}

model Team {
  id          String       @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  isActive    Boolean      @default(true)
  settings    Json?
  type        TeamType     @default(PERSONAL)
  Activity    Activity[]
  members     TeamMember[]
  WorkLog     WorkLog[]
}

model TeamMember {
  id        String   @id @default(uuid())
  userId    String
  teamId    String
  role      TeamRole @default(MEMBER)
  joinedAt  DateTime @default(now())
  invitedBy String?
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, teamId])
  @@index([teamId])
}

model WorkLog {
  id            String   @id @default(uuid())
  userId        String
  date          DateTime @db.Date
  summary       String
  source        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  activityCount Int      @default(0)
  categories    Json?
  teamId        String
  totalHours    Float?
  vectorIds     String[]
  Team          Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, teamId, date])
  @@index([userId, date])
  @@index([teamId, date])
}

model Activity {
  id           String   @id @default(uuid())
  userId       String
  activityType String
  content      String
  metadata     Json?
  timestamp    DateTime @default(now())
  vectorId     String?
  processed    Boolean  @default(false)
  teamId       String
  Team         Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, timestamp])
  @@index([processed])
  @@index([teamId, timestamp])
}

enum Role {
  ADMIN
  EMPLOYEE
}

enum TeamRole {
  OWNER
  ADMIN
  MEMBER
}

enum AccountType {
  INDIVIDUAL
  ORGANIZATION_MEMBER
}

enum TeamType {
  PERSONAL
  ORGANIZATION
}
