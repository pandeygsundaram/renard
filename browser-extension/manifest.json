{
  "manifest_version": 3,
  "name": "Renard",
  "version": "1.0",
  "description": "Reads chat messages from ChatGPT, Gemini, Claude, Grok.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": ["storage", "scripting", "activeTab", "tabs"],

  "host_permissions": [
    "https://chatgpt.com/*",
    "https://www.chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://gemini.google.com/*",
    "https://claude.ai/*",
    "https://grok.com/*",
    "https://x.ai/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://www.chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["content/content-script.js"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["content/content-script.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content/content-script.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://grok.com/*",
        "https://www.grok.com/*",
        "https://x.ai/*"
      ],
      "js": ["content/content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "externally_connectable": {
    "matches": ["http://localhost:5173/*"]
  }
}
